<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Dashboard Overview</title>
</head>
<body class="p-6 pt-5">
    <header class="bg-white shadow p-4 mt-6">
        <h2 class="text-2xl font-semibold">Dashboard Overview</h2>
    </header>
    <%- include('../partials/mini-nav-donors.ejs'); %>

    <!-- Your Info Table -->
    <div class="mb-6">
        <h2 class="text-xl font-semibold mb-6">Your Info</h2>
        <a href="/<%= user.uid %>/donorsdashboard/profile" class="btn bg-blue-700 hover:bg-blue-400 rounded-md mb-4 px-6 py-3 text-white">Modify Info</a>
        <table class="min-w-full table-auto bg-white shadow-md rounded-lg mt-3">
            <thead class="bg-blue-500 text-white">
                <tr>
                    <th class="px-4 py-2">Full Name</th>
                    <th class="px-4 py-2">Email</th>
                    <th class="px-4 py-2">Blood Group</th>
                    <th class="px-4 py-2">Province</th>
                    <th class="px-4 py-2">District</th>
                    <th class="px-4 py-2">Sector</th>
                </tr>
            </thead>
            <tbody id="userInfo">
                <!-- Skeleton Loader -->
                <tr class="animate-pulse">
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Appointments Table -->
    <div class="mb-6">
        <h2 class="text-xl font-semibold mb-6">Your Appointments</h2>
        <a href="/<%= user.uid %>/donorsdashboard/appointments" class="btn bg-green-700 hover:bg-green-400 rounded text-white mb-4 px-6 py-3">Manage Appointments</a>
        <table class="min-w-full table-auto bg-white shadow-md rounded-lg mt-3">
            <thead class="bg-green-500 text-white">
                <tr>
                    <th class="px-4 py-2">Date</th>
                    <th class="px-4 py-2">Time</th>
                    <th class="px-4 py-2">Province</th>
                    <th class="px-4 py-2">Center</th>
                </tr>
            </thead>
            <tbody id="appointments">
                <!-- Skeleton Loader -->
                <tr class="animate-pulse">
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Donations Table -->
    <div class="mb-6">
        <h2 class="text-xl font-semibold mb-6">Your Donations</h2>
        <a href="/<%= user.uid %>/donorsdashboard/donor-card" class="btn bg-red-700 hover:bg-red-400 rounded text-white mb-4 px-6 py-3">View Donation Drives</a>
        <table class="min-w-full table-auto bg-white shadow-md rounded-lg mt-3">
            <thead class="bg-red-500 text-white">
                <tr>
                    <th class="px-4 py-2">Date</th>
                    <th class="px-4 py-2">Blood Quantity</th>
                    <th class="px-4 py-2">Rhesus</th>
                    <th class="px-4 py-2">Center</th>
                    <th class="px-4 py-2">Doctor</th>
                </tr>
            </thead>
            <tbody id="donations">
                <!-- Skeleton Loader -->
                <tr class="animate-pulse">
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                    <td class="px-6 py-4">
                        <div class="h-4 bg-gray-300 rounded w-1/3"></div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="/js/userdashboard.js"></script>
</body>
</html>
