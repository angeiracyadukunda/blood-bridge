<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>

    <!-- Contact Form Section -->
    <main id="contact-section" class="bg-gray-100 py-10">
        <header class="text-center mb-6">
            <h1 class="text-3xl font-bold">Contact Us</h1>
            <p class="mt-2 text-gray-700">If you have any questions or need assistance, feel free to reach out to us through the form below. Weâ€™ll get back to you as soon as possible.</p>
        </header>

        <section class="contact-form-section max-w-md mx-auto bg-white rounded-lg shadow-lg p-6">
            <form id="contact-form">
                <div class="form-group mb-4">
                    <label for="name" class="block text-gray-700">Full Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter your full name" required class="border border-gray-300 rounded-md p-2 w-full">
                </div>

                <div class="form-group mb-4">
                    <label for="email" class="block text-gray-700">Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email address" required class="border border-gray-300 rounded-md p-2 w-full">
                </div>

                <div class="form-group mb-4">
                    <label for="subject" class="block text-gray-700">Subject</label>
                    <input type="text" id="subject" name="subject" placeholder="Enter the subject" required class="border border-gray-300 rounded-md p-2 w-full">
                </div>

                <div class="form-group mb-4">
                    <label for="message" class="block text-gray-700">Message</label>
                    <textarea id="message" name="message" placeholder="Write your message here" rows="6" required class="border border-gray-300 rounded-md p-2 w-full"></textarea>
                </div>

                <button type="submit" class="submit-button bg-blue-500 text-white rounded-md py-2 px-4 hover:bg-blue-600">Send Message</button>
            </form>
        </section>

        <div id="confirmation-message" class="hidden mt-4 max-w-md mx-auto bg-gray-200 rounded-lg p-4"></div>
    </main>

    <%- include('./partials/footer.ejs') %>
    <script src="/js/contactForm.js"></script> <!-- Your external script -->
</body>
</html>
