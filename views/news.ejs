<html lang="en">
    <%- include('./partials/header.ejs') %>

<body class="bg-gray-100">
    <!-- Top Nav Bar -->
    <%- include('./partials/navbar.ejs') %>

    <!-- Main Content Section -->
    <main id="news-announcements" class="p-6 container mx-auto">
        <!-- Skeleton Loader -->
        <div id="loadingSkeleton" class="space-y-6">
            <div class="animate-pulse space-y-4">
                <div class="h-6 bg-gray-300 rounded w-3/4 mb-2"></div>
                <div class="space-y-2">
                    <div class="h-4 bg-gray-300 rounded w-full"></div>
                    <div class="h-4 bg-gray-300 rounded w-5/6"></div>
                </div>
            </div>
            <div class="animate-pulse space-y-4">
                <div class="h-6 bg-gray-300 rounded w-3/4 mb-2"></div>
                <div class="space-y-2">
                    <div class="h-4 bg-gray-300 rounded w-full"></div>
                    <div class="h-4 bg-gray-300 rounded w-5/6"></div>
                </div>
            </div>
        </div>

        <!-- Latest News Section -->
        <section id="latestNewsSection" class="content-section hidden mb-8">
            <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mb-4">Latest News</h2>
            <div id="latestNews" class="space-y-6"></div>
        </section>

        <!-- Upcoming Events Section -->
        <section id="upcomingEventsSection" class="content-section hidden mb-8">
            <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mb-4">Upcoming Events</h2>
            <ul id="upcomingEvents" class="space-y-6"></ul>
        </section>

        <!-- Success Stories Section -->
        <section id="successStoriesSection" class="content-section hidden mb-8">
            <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mb-4">Success Stories</h2>
            <div id="successStories" class="space-y-6"></div>
        </section>

        <!-- Event Highlights Section -->
        <section id="eventHighlightsSection" class="content-section hidden mb-8">
            <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mb-4">Event Highlights</h2>
            <div id="eventHighlights" class="space-y-6"></div>
        </section>
    </main>

    <!-- Footer -->
    <%- include('./partials/footer.ejs') %>
    <script src="../path/to/flowbite/dist/flowbite.min.js"></script>
    <script src="/js/news.js"></script>
</body>
</html>
