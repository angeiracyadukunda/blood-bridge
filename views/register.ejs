<!-- register.ejs -->
<html lang="en">

<%- include('./partials/header.ejs') %>

<body>
  <!-- Top Nav Bar -->

  <%- include('./partials/navbar.ejs') %>


  <section id="auth-section">
    <div class="auth-container shadow-md">
        <form id="registerForm" class="text-gray-900">
        <h2 class="text-2xl font-bold mb-6 text-center text-red-900">Donor Registration</h2>


            <label for="email" class="ml-3 block text-gray-700">Email</label>
            <input type="email" id="email" name="email" value="<%= email %>" readonly>


            <label for="fullName" class="ml-3 block text-gray-700">Full Name</label>
            <input type="text" id="fullName" name="fullName" value="<%= fullName %>" readonly>
                        <!-- <input type="text" id="fullName" name="fullName" value="" class="mt-2 p-2 border border-gray-300 rounded w-full focus:outline-none focus:border-red-900"> -->

            <label for="gender" class="ml-3 block text-gray-700">Gender</label>
            <select id="gender" name="gender" required >
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>

            <label for="dob" class="ml-3 block text-gray-700">Date of Birth</label>
            <input type="date" id="dob" name="dob" required >

            <label for="idType" class="ml-3 block text-gray-700">ID Type</label>
            <select id="idType" name="idType" required >
                <option value="nationalId">National ID</option>
                <option value="passport">Passport</option>
            </select>

            <label for="idNo" class="ml-3 block text-gray-700">ID No</label>
            <input type="text" id="idNo" name="idNo" required >

            <label for="weight" class="ml-3 block text-gray-700">Weight</label>
            <input type="number" id="weight" name="weight" required >

            <label for="bloodGroup" class="ml-3 block text-gray-700">Blood Group</label>
            <select id="bloodGroup" name="bloodGroup" required >
                <option value="" disabled selected>Select your blood group</option>
                <option value="A+">A+</option>
                <option value="A-">A-</option>
                <option value="B+">B+</option>
                <option value="B-">B-</option>
                <option value="AB+">AB+</option>
                <option value="AB-">AB-</option>
                <option value="O+">O+</option>
                <option value="O-">O-</option>
                <option value="I am not sure">I am not sure</option>
            </select>

            <label for="province" class="ml-3 block text-gray-700">Province</label>
            <input type="text" id="province" name="province" required >

            <label for="district" class="ml-3 block text-gray-700">District</label>
            <input type="text" id="district" name="district" required >

            <label for="sector" class="ml-3 block text-gray-700">Sector</label>
            <input type="text" id="sector" name="sector" required >

        <button type="submit" >Complete Registration</button>
    </form>

    <div class="alert" style="display: none; position: fixed; top: 10%; left: 50%; transform: translateX(-50%); padding: 10px; color: white; font-weight: bold; border-radius: 5px;"></div>
    </div>
  </section>  

<script src="/js/register.js"></script>
<%- include('./partials/footer.ejs') %>
<!-- <script src="/js/scripts.js"></script> -->

</body>

</html>